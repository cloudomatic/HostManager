{
  "openapi": "3.0.0",
  "info": {
    "title": "HostManager API",
    "version": "1.0.0"
  },
  "basePath": "/api/v1",
  "paths": {
    "/status": {
      "get": {
        "operationId": "getStatus",
        "summary": "Server Status",
        "responses": {
          "200": {
            "description": "Server is active and healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "localtime": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "localtime": "Sat Apr 01 23:06:24 GMT 2023",
                  "status": "ok"
                }
              }
            }
          }
        }
      }
    }
  }              
}              


